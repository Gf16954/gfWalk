    </style>

    <style name="AppThemeGreen" parent="AppThemeBase">
        <item name="myColorPrimary">@color/colorPrimaryGreen</item>
        <item name="myNormalBackground">@color/normalBackgroundGreen</item>
        <item name="myButtonBackground">@color/buttonBackgroundGreen</item>
        <item name="mySelectedBackground">@color/selectedBackgroundGreen</item>
    </style>

    <style name="AppThemeViolet" parent="AppThemeBase">
        <item name="myColorPrimary">@color/colorPrimaryViolet</item>
        <item name="myNormalBackground">@color/normalBackgroundViolet</item>
        <item name="myButtonBackground">@color/buttonBackgroundViolet</item>
        <item name="mySelectedBackground">@color/selectedBackgroundViolet</item>
    </style>

    <style name="AppThemeBlue" parent="AppThemeBase">
        <item name="myColorPrimary">@color/colorPrimaryBlue</item>
        <item name="myNormalBackground">@color/normalBackgroundBlue</item>
        <item name="myButtonBackground">@color/buttonBackgroundBlue</item>
        <item name="mySelectedBackground">@color/selectedBackgroundBlue</item>
    </style>

    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/MyTitleTextStyle</item>
        <item name="checkboxStyle">@style/MyCheckboxStyle</item>
    </style>

    <style name="MyTitleTextStyle" parent="@style/TextAppearance.AppCompat.Title">
        <!-- Default for portrait is 20sp and for landscape 14sp Так хорошо -->
        <!-- <item name="android:textSize">20sp</item> -->
    </style>

    <style name="MyPopupMenu" parent="@style/Widget.AppCompat.PopupMenu">
        <item name="android:checkboxStyle">@style/MyCheckboxStyle</item>
    </style>

    <style name="MyCheckboxStyle" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <!-- Пытаюсь покрасить рамки checkbox'ов - никак. В Preference Activity OK -->
        <item name="colorControlNormal">?myColorPrimary</item>
        <item name="android:textColorSecondary">?myColorPrimary</item>
    </style>

    <style name="DialogFragmentTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/fragment_textColor</item>
        <item name="android:background">?myNormalBackground</item>
        <item name="colorControlActivated">?myColorPrimary</item>
        <item name="colorControlNormal">?myColorPrimary</item>  <!-- кружки radio buttons не выбранных, квадраты checkbox'ов -->
    </style>

    <style name="WalkInfoButton" parent="DialogFragmentTheme">
        <item name="android:height">@dimen/walkinfo_buttonHeight</item>
        <item name="android:textSize">@dimen/walkinfo_textSize3</item>
        <item name="android:textColor">@color/walkinfo_color1</item>
        <item name="android:backgroundTint">?myButtonBackground</item>

        <item name="android:drawablePadding">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="CommonButton" parent="DialogFragmentTheme">
        android:backgroundTint="?myButtonBackground"
    </style>

    <style name="WalkFilterTheme" parent="DialogFragmentTheme">
<!--        <item name="android:textSize">@dimen/walkfilter_textSize1</item>-->
    </style>
</resources>
