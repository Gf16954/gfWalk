<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gallery_color0"
    >
    <Gallery
        android:id="@+id/gallerySnapshotList"
        android:layout_width="fill_parent"
        android:layout_height="75dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:spacing="0dp"
        />
    <ImageView
        android:id="@+id/imageviewPicture"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/gallerySnapshotList"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:adjustViewBounds="true"
        android:src="@drawable/ic_action_to_bin"
        />
    <!-- Заголовок - время и адрес -->
    <TextView
        android:id="@+id/textviewText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/gallerySnapshotList"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="1dp"
        android:textSize="@dimen/textSize2"
        />
    <!-- Это нужно для перехвата фокуса у EditText чтобы не вылезала клавиатура -->
    <LinearLayout
        android:id="@+id/textviewVoid"
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        android:focusable="true"
        android:focusableInTouchMode="true">
    </LinearLayout>
    <EditText
        android:id="@+id/textviewComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/gallerySnapshotList"
        android:layout_marginBottom="0dp"
        android:inputType="textMultiLine"
        android:paddingBottom="10dp"
        android:textSize="@dimen/textSize2"
        android:shadowColor="#FFFFFF"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:hint="@string/walk_comment"
        />
<!--    android:hint=" &#63;                 " -->
</RelativeLayout>
