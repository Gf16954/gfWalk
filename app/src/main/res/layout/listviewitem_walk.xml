<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/listviewitem_height1"
    >

    <ImageView
        android:id="@+id/imageViewIcon"
        android:layout_height="match_parent"
        android:layout_width="@dimen/listviewitem_height1"
        android:paddingTop="@dimen/listviewitem_verticalPadding"
        android:paddingBottom="@dimen/listviewitem_verticalPadding"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonWalkId"
        android:layout_toEndOf="@id/imageViewIcon"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:backgroundTint="?myButtonBackground"
        android:textSize="@dimen/listviewitem_textSize1"
        android:text="#999"
        android:focusable="false"
        android:focusableInTouchMode="false"
        />
<!-- Без последних двух строка не кликается -->
<!-- Не работает
    app:strokeColor="@color/colorButtonStroke"
    app:strokeWidth="0dp"
    app:elevation="0dp"
-->

    <TextView
        android:id="@+id/textViewString1"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listviewitem_height2"
        android:layout_toEndOf="@id/buttonWalkId"
        android:layout_marginTop="@dimen/listviewitem_verticalPadding"
        android:layout_marginStart="5dp"
        android:textSize="@dimen/listviewitem_textSize1"
        android:textStyle="bold"
        android:text="30.06.2020"/>
    <TextView
        android:id="@+id/textViewString2"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/listviewitem_height2"
        android:layout_toEndOf="@id/textViewString1"
        android:layout_marginTop="@dimen/listviewitem_verticalPadding"
        android:layout_marginStart="5dp"
        android:singleLine="true"
        android:textSize="@dimen/listviewitem_textSize2"
        android:gravity="center"
        android:textColor="#000000"
        android:text="22:33..."/>
    <TextView
        android:id="@+id/textViewString3"
        android:paddingStart="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/listviewitem_height3"
        android:layout_alignStart="@id/textViewString1"
        android:layout_below="@id/textViewString1"
        android:singleLine="true"
        android:textSize="@dimen/listviewitem_textSize2"
        android:textColor="#000000"
        android:text="11:11..."/>
</RelativeLayout>

